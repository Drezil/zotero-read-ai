{
  "name": "zotero-read-ai",
  "version": "0.0.1-pre.3",
  "description": "Zotero ReadAi",
  "config": {
    "addonName": "Zotero Read Ai",
    "addonID": "readai@hu-berlin.de",
    "addonRef": "readai",
    "addonInstance": "ReadAi",
    "prefsPrefix": "extensions.zotero.readai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drezil/zotero-read-ai.git"
  },
  "npm": {
    "publish": false
  },
  "author": "Drezil",
  "bugs": {
    "url": "https://github.com/Drezil/zotero-read-ai/issues"
  },
  "homepage": "https://github.com/Drezil/zotero-read-ai#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "tsc --noEmit && zotero-plugin build",
    "lint": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^2.3.37"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "zotero-plugin-scaffold": "^0.0.26",
    "zotero-types": "^2.1.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
